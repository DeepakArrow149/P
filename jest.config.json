{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "testMatch": [
    "**/tests/**/*.+(js|ts)",
    "**/*.(test|spec).+(js|ts)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx,js}",
    "!src/**/*.d.ts"
  ],
  "testTimeout": 30000,
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  }
}
